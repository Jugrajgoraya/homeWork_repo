<%- include('partials/header.ejs')  %> 
    <div class="card mt-3">
        <div class="card-body">
          <h4 class="card-title"><%- cohort.name  %> </h4>
          <p class="card-text"><%- cohort.members %> </p>

          <hr class="mb-4 mt-4">

        <form class="form">
            <fieldset class="row mb-3">
                <legend class="col-form-label"><h5>Method</h5></legend>
                <div class="form-check m-3">
                  <input class="form-check-input" type="radio" name="input" id="teamCount" value="teamCount">
                  <label class="form-check-label" for="teamCount">
                    Team Count
                  </label>
                </div>
                <div class="form-check m-3">
                  <input class="form-check-input" type="radio" name="input" id="memberPerTeam" value="numberPerCount">
                  <label class="form-check-label" for="memberPerTeam">
                    Number Per Count
                  </label>
                </div>         
            </fieldset>
            <div class="mb-3">
              <label for="quantity" class="form-label"><h5>Quantity</h5></label>
              <input type="text" class="form-control" id="quantity" name="quantity">
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-outline-primary">Assign Teams</button>
            </div>
        </form> 
          <% if (result) { %>
          <div class="members">
              <ul class="list-group list-group-flush list-group-numbered">
                  <h5 class="list-group-item mt-3">#  Members</h5>
                  <% for( let i in result) {%> 
                  <li class="list-group-item "> <%- result[i]  %> </li>
                  <% } %> 
              </ul>
          </div>
        <% } %>    
      </div>
    </div>

<%- include('partials/footer.ejs')  %>   


